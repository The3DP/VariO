  # This is a testing program, it is not to be used for commercial issues
def exit():
 ex = 2
 while ex != 1 and ex != 0:
  ex = int(input("enter 1 to continue or 0 to exit"))
 return ex

#variable to keep track of loop iterations
counter = 0

#create variable for bool
stay = True

while stay:
 print(counter)
 counter+=1
 stay = exit()

print("You have exited the loop")
